= render 'posts/header'
%h1.showpost_title
  = link_to 'Baby BLOGs', root_path,class:'newpost_titlelogo'
.dammy_block
.user_show
  - if @user.bgi == "背景1"
    = image_tag asset_path('show_header1.jpeg'),class:'user_show-header',size:'1050x250'
  - elsif @user.bgi == "背景2"
    = image_tag asset_path('show_header2.jpeg'),class:'user_show-header',size:'1050x250'
  - elsif @user.bgi == "背景3"
    = image_tag asset_path('show_header3.jpeg'),class:'user_show-header',size:'1050x250'
  - elsif @user.bgi == "背景4"
    = image_tag asset_path('show_header4.jpeg'),class:'user_show-header',size:'1050x250'
  - elsif @user.bgi == "背景5"
    = image_tag asset_path('show_header5.jpeg'),class:'user_show-header',size:'1050x250'
  - elsif @user.bgi == "背景6"
    = image_tag asset_path('show_header6.jpeg'),class:'user_show-header',size:'1050x250'
  - elsif @user.bgi == "背景7"
    = image_tag asset_path('show_header7.jpeg'),class:'user_show-header',size:'1050x250'
  .user_show-box
    .user_show-boxarea
      .user_iconarea
        - if @user.icon.present?
          = image_tag @user.icon.url ,class:'usershow_icon',size:'120x120'
        - else
          = image_tag asset_path('new_baby.png'),class:'usershow_icon',size:'120x120'
      .user_follow
        .user_follow-box
          .follow_btn フォローする
      .user_setting
        %i.fas.fa-bars
    .edit_box.clear_box
      = link_to 'ユーザー編集',edit_user_path(@user.id),class:'user_edit'
      = link_to 'ユーザー削除',user_path(@user.id),method: :delete,data: {confirm: "削除しますか？"},class:'user_edit'
      = link_to 'ログアウト',destroy_user_session_path,method: :delete,class:'user_edit'
      .close_btn 閉じる
.show_info
  .show_info-left
    .show_info-leftname
      = @user.nickname
    .show_info-leftfollow
      100 フォロー中  200 フォロワー 
    .show_info-leftarticle
      = "記事数 : #{@item.length}"
  .show_info-right

.show_article
  = render 'users/blog'
= render 'posts/footer'