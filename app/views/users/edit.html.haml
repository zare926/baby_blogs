= render 'posts/header'
%h1.showpost_title
  = link_to 'Baby BLOGs', root_path,class:'newpost_titlelogo'
.user_editcontent
  = form_with(model: @user, local: true) do |f|
    .dammy_block
    .user_show
      = image_tag asset_path('show_header1.jpeg'),class:'user_show-header',size:'1050x250'
      = f.select :bgi,[['背景1','背景1'],['背景2','背景2'],['背景3','背景3'],['背景4','背景4'],['背景5','背景5'],['背景6','背景6'],['背景7','背景7'],],class:'bgi_change',name:'bgi'
      .user_show-box
        .user_show-boxarea
          .user_iconarea
            - if @user.icon.present?
              = image_tag @user.icon.url ,class:'usershow_icon',size:'120x120'
            - else
              = image_tag asset_path('new_baby.png'),class:'usershow_icon',size:'120x120'
          = f.file_field :icon, class:'icon_change-dammy'
          .icon_change-info プロフィール画像変更
          .icon_change 画像選択
      .change_field
        .change_name-area
          .name_change-info ニックネーム変更
          = f.text_field :nickname , class:'user_namechange',placeholder:'ニックネームを入力してください'
          = f.submit '変更', class:'change_btn'
        .change_introduction-area
          = f.text_area :introduction , class:'introduction_change',placeholder:'自己紹介など(280文字まで)'
= render 'posts/footer'