%header.main_header
  %h1.main_header-title
    = link_to 'Baby BLOGs', "#",class:'main_header-titlelogo'
  .main_header-link
    %nav.bnav
      %ul.bnav-options
        %li.bnav_items
          = link_to 'NEW','#',class:'item'
        %li.bnav_items
          = link_to 'MYBLOG','#',class:'item'
        %li.bnav_items
          = link_to 'INFO','#',class:'item'
        %li.bnav_items
          = if user_signed_in?
            = link_to 'LOGOUT',destroy_user_session_path,method: :delete,class:'item'
          = else
            = link_to 'LOGIN',new_user_session_path,class:'item'
    .bsearch
      %form.search
        %input{type:'text' ,placeholder:'Search',class:'bsearch_input',size:'15px',style:'font-size: 1rem'}
        %button{type:'submit', class:'bsearch_btn'} Search
        %i.fas.fa-search
  .b-header
  %nav.snav
    %ul.snav-options
      %li.snav_icon
        = link_to '#' do
          %i.fab.fa-twitter
      %li.snav_icon
        = link_to '#' do
          %i.fab.fa-facebook-square