.container
  %header.top
    .top_logo
      .top_logo-name Baby BLOGs
    %figure.top_logoarea
      = image_tag asset_path('top.jpeg'), class: "top_logoarea-image"
  .fake
  .main
    %header.main_header
      %h1.main_header-title
        = link_to 'Baby BLOGs', "#",class:'main_header-titlelogo'
      .main_header-link
        %nav.bnav
          %ul.bnav-options
            %li.bnav_items
              = link_to 'NEW','#',class:'item'
            %li.bnav_items
              = link_to 'MYBLOG','#',class:'item'
            %li.bnav_items
              = link_to 'INFO','#',class:'item'
            %li.bnav_items
              = link_to 'LOGIN','#',class:'item'
        .bsearch
          %form.search
            %input{type:'text' ,placeholder:'Search',class:'bsearch_input',style:'font-size:15px'}
            %button{type:'submit', class:'bsearch_btn'} Search
      %nav.snav
        %ul.snav-options
          %li.snav_icon
            = link_to '#' do
              %i.fab.fa-twitter
          %li.snav_icon
            = link_to '#' do
              %i.fab.fa-facebook-square

    .main_content